doctype html
html
    head
        meta(charset="utf-8")
        title Simple Web App
    body
        h1
            a(href="/topic") Server Side Javascript
        ul
            each t in topics
                li
                    a(href="/topic/"+t.id)= t.title
        article
            form(action = "/topic/" + topic.id + "/edit" method="post")
                p
                    input(type="text" name="title" value=topic.title)
                p
                    textarea(name="description" )=topic.description
                p
                    input(type="text" name="author" value=topic.author)
                p
                    input(type="submit")
